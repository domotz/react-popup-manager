{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "outDir": "./dist",
    "moduleResolution": "node",
    "target": "es5",
    "noUnusedLocals": true,
    "jsx": "react-jsx",
    "lib": ["dom", "es2016"],
    "declaration": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./index.ts",
  ],
  "exclude": [
    "./src/tests/**"
  ],
  "files": [
    "./index.ts"
  ]
}
